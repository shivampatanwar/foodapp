<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<servlet>
		<servlet-name>AddProduct</servlet-name>
		<display-name>AddProduct</display-name>
		<description></description>
		<servlet-class>controller.AddProduct</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>CustomerCart</servlet-name>
		<display-name>CustomerCart</display-name>
		<description></description>
		<servlet-class>controller.CustomerCart</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteProduct</servlet-name>
		<display-name>DeleteProduct</display-name>
		<description></description>
		<servlet-class>dao.DeleteProduct</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UpdateProduct</servlet-name>
		<display-name>UpdateProduct</display-name>
		<description></description>
		<servlet-class>dao.UpdateProduct</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AddProduct</servlet-name>
		<url-pattern>/AddProduct</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>CustomerCart</servlet-name>
		<url-pattern>/CustomerCart</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteProduct</servlet-name>
		<url-pattern>/DeleteProduct</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateProduct</servlet-name>
		<url-pattern>/UpdateProduct</url-pattern>
	</servlet-mapping>


	<session-config>
		<session-timeout>20</session-timeout>
	</session-config>

</web-app>
